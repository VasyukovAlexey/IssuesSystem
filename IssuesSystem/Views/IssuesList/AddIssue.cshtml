@model IssuesSystem.Models.Issue
@{
    Layout = null;
}
                                                                                                         @*Выводим форму заполнения заявки*@
@using (Html.BeginForm("AddIssue", "IssuesList", FormMethod.Post,new {onsubmit="return SubmitForm(this)"}))
{
    
                                                                                                  //Для заведения требуется только одно описание.
    <div class="form-group" >
        @Html.LabelFor(model => model.Description, new { @class = "col-form-label" })
        <div class="input-group">
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
            
        </div>
    </div>
    
    <div class="form-group">
        <input type ="submit" value="Submit" class="btn btn-primary"/>
    </div>
}
